---
import { site } from "../content/site";
---

<section id="equipo" class="bg-white py-16">
  <div class="mx-auto max-w-6xl px-4">
    <header class="max-w-2xl">
      <p class="text-xs font-semibold tracking-[0.2em] text-amber-700 uppercase">Equipo</p>
      <h2 class="mt-3 text-3xl font-extrabold tracking-tight text-slate-900">Abogadas</h2>
      <p class="mt-3 text-slate-600">
        Formación sólida, criterio práctico y compromiso profesional.
      </p>
    </header>

    <div class="mt-10 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {site.team.map((p) => (
        <article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-start gap-4">
            <div class="h-12 w-12 shrink-0 rounded-2xl bg-[#cbc0b2] ring-1 ring-[#7e6961] flex items-center justify-center">
              <span class="text-sm font-extrabold text-rose-950">
                {p.name.split(" ").slice(0, 2).map(w => w[0]).join("")}
              </span>
            </div>
            <div>
              <h3 class="text-lg font-bold text-slate-900">{p.name}</h3>
              <p class="text-sm font-semibold text-rose-950">{p.role}</p>
            </div>
          </div>

          <p class="mt-4 text-sm leading-relaxed text-slate-600">
            {p.bio}
          </p>

          <div class="mt-5 flex flex-wrap gap-2">
            <span class="inline-flex rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">Ética</span>
            <span class="inline-flex rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">Claridad</span>
            <span class="inline-flex rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">Estrategia</span>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
