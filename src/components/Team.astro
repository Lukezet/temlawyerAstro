---
import { site } from "../content/site";
---

<section id="equipo" class="relative bg-white py-16 overflow-hidden">
  <!-- Fondo beige inclinado -->
  <div
    class="pointer-events-none absolute inset-x-0 top-72 h-[1020px] "
    aria-hidden="true"
  ></div>

  <div class="relative mx-auto max-w-6xl px-4">
    <!-- Encabezado centrado -->
    <header class="flex flex-col mx-auto max-w-2xl text-center items-center">
      <p class="text-xs font-semibold tracking-[0.2em] text-amber-700 uppercase">Equipo</p>
      <h2 class="mt-3 text-3xl font-extrabold tracking-tight text-slate-900">Abogadas</h2>
      <p class="mt-3 text-slate-600">
        Formación sólida, criterio práctico y compromiso profesional.
      </p>
    </header>

    <!-- Grid -->
    <div class="mt-14 grid grid-cols-1 gap-14 sm:grid-cols-2 sm:gap-10">
      {site.team.map((p, idx) => (
        <article
          class="relative text-center"

        >
          <!-- Foto circular grande -->
          <div class="mx-auto  overflow-hidden bg-white shadow-md  w-60">
            <img
              src={p.pic}
              alt={p.name}
              class="h-full w-full object-cover"
              loading="lazy"
              decoding="async"
            />
          </div>

          <!-- Nombre / rol -->
          <h3 class="mt-6 text-sm font-extrabold tracking-[0.18em] text-slate-900 uppercase">
            {p.name}
          </h3>
          <p class="mt-2 text-xs font-semibold tracking-[0.18em] text-rose-950 uppercase">
            {p.role}
          </p>

          <!-- Bio -->
          <p class="mx-auto mt-4 max-w-md text-sm leading-relaxed text-slate-600">
            {p.bio}
          </p>
        </article>
      ))}
    </div>
  </div>
</section>
