---
import { site } from "../content/site";

// Mapa de íconos SVG para cada servicio
const icons: Record<string, string> = {
  chat: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />`,
  users: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />`,
  scale: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />`,
  briefcase: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
};
---

<section id="servicios" class="bg-slate-50 py-20">
  <div class="mx-auto max-w-6xl px-4">
    <header class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-slate-900 sm:text-4xl">
        Nuestros Servicios
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        Soluciones legales enfocadas en prevención, negociación y litigio cuando corresponde.
      </p>
    </header>

    <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {site.services.map((s) => (
        <article class="group relative flex flex-col rounded-2xl bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl border border-slate-100">
          <div class="mb-6 inline-flex h-12 w-12 items-center justify-center rounded-xl bg-rose-50 text-rose-800 transition-colors group-hover:bg-rose-800 group-hover:text-white">
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              set:html={icons[s.icon || 'chat']}
            />
          </div>
          
          <h3 class="text-xl font-bold text-slate-900">{s.title}</h3>
          <p class="mt-3 flex-1 text-base leading-relaxed text-slate-600">{s.text}</p>
          
          <div class="mt-6">
            <a href="#contacto" class="inline-flex items-center text-sm font-semibold text-rose-700 transition-colors hover:text-rose-900">
              Consultar <span class="ml-1 transition-transform group-hover:translate-x-1">→</span>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
