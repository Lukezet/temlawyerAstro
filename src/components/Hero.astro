---
import { site } from "../content/site";
---

<section
  id="inicio"
  class="relative isolate overflow-hidden bg-pink-950 text-white rounded-bl-[300px]"
>
  <!-- VIDEO DE FONDO -->
  <video
    class="absolute inset-0 h-full w-full object-cover"
    autoplay
    muted
    loop
    playsinline
    preload="metadata"
    aria-hidden="true"
  >
    <source src="src/assets/videos/hero.mp4" type="video/mp4" />
  </video>

  <!-- OVERLAY OSCURO PARA CONTRASTE -->
  <div class="absolute inset-0 bg-rose-950/70"></div>

  <!-- GRADIENTES DECORATIVOS (opcionales, quedan muy bien sobre video) -->
  <div class="pointer-events-none absolute inset-0">
    <div class="absolute -left-24 -top-24 h-80 w-80 rounded-full bg-pink-800/40 blur-3xl"></div>
    <div class="absolute -right-24 bottom-10 h-80 w-80 rounded-full bg-rose-700/40 blur-3xl"></div>
  </div>

  <!-- CONTENIDO -->
  <div
    class="relative mx-auto grid max-w-6xl grid-cols-1 gap-10 px-4 py-32 md:grid-cols-2 md:items-start"
  >
    <div>
      <p class="text-xs font-semibold tracking-[0.2em] text-[#cbc0b2] uppercase">
        Estudio jurídico
      </p>

      <h1 class="mt-3 text-4xl font-extrabold tracking-tight md:text-5xl">
        Asesoramiento legal claro, humano y estratégico.
      </h1>

      <p class="mt-4 max-w-xl text-base leading-relaxed text-white/90">
        {site.description}
      </p>

      <div class="mt-8 flex flex-wrap gap-3">
        <a
          href="#contacto"
          class="inline-flex items-center justify-center rounded-full bg-[#7e6961] px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-[#685750] focus:outline-none focus:ring-2 focus:ring-pink-600/40"
        >
          Solicitar consulta
        </a>

        <a
          href="#servicios"
          class="inline-flex items-center justify-center rounded-full border border-white/30 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          Ver servicios
        </a>
      </div>

      <ul class="mt-8 grid max-w-xl grid-cols-1 gap-3 text-sm text-white/90 sm:grid-cols-3">
        <li class="rounded-2xl border border-white/10 bg-white/10 px-4 py-3">
          Atención personalizada
        </li>
        <li class="rounded-2xl border border-white/10 bg-white/10 px-4 py-3">
          Estrategia y previsión
        </li>
        <li class="rounded-2xl border border-white/10 bg-white/10 px-4 py-3">
          Comunicación transparente
        </li>
      </ul>
    </div>

    <aside class="rounded-3xl border border-white/10 bg-white/10 p-6 shadow-2xl">
      <div class="space-y-4">
        <div class="rounded-2xl border border-white/10 bg-white/10 p-4">
          <p class="text-2xl font-extrabold">+10</p>
          <p class="text-sm text-white/80">Años de experiencia</p>
        </div>

        <div class="rounded-2xl border border-white/10 bg-white/10 p-4">
          <p class="text-2xl font-extrabold">100%</p>
          <p class="text-sm text-white/80">Enfoque en resultados</p>
        </div>

        <div class="rounded-2xl border border-white/10 bg-white/10 p-4">
          <p class="text-2xl font-extrabold">{site.address.city}</p>
          <p class="text-sm text-white/80">Atención presencial y online</p>
        </div>
      </div>
    </aside>
  </div>
</section>
