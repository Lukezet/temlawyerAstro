---
import '../styles/global.css';
import Seo from "../components/Seo.astro";
import FloatingWhatsApp from "../components/FloatingWhatsapp.astro";

type Props = { title?: string; description?: string; canonical?: string };
const { title, description, canonical } = Astro.props;
---

<!doctype html>
<html lang="es-AR" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo title={title} description={description} canonical={canonical} />
  </head>
  <body class="bg-white text-slate-900 antialiased">
    <a
      href="#contenido"
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[60] focus:rounded-xl focus:bg-white focus:px-4 focus:py-2 focus:shadow-lg"
    >
      Saltar al contenido
    </a>
    <slot />
        <!-- BotÃ³n fijo WhatsApp -->
    <FloatingWhatsApp />
  </body>
</html>
